<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="match_parent"
              android:layout_width="@dimen/sidebar_width"
              android:orientation="vertical"
        >
    <include layout="@layout/gradient_balancer"/>
    <View
            android:layout_height="@dimen/corner_gradient_height"
            android:layout_width="@dimen/line_width"
            android:layout_gravity="left"
            android:background="@drawable/down_gradient"/>
    <View
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"/>

    <View
            android:layout_height="@dimen/corner_gradient_height"
            android:layout_width="@dimen/line_width"
            android:layout_gravity="left"
            android:background="@drawable/up_gradient"/>
    <include layout="@layout/gradient_balancer"/>
</LinearLayout>