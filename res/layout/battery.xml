<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingRight="5dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="wrap_content"
                  android:layout_height="@dimen/total_gradient_height"
                  android:orientation="vertical">
        <include layout="@layout/gradient_balancer"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width"
                android:layout_gravity="center_vertical"
                android:background="@color/piptext"/>
        <TextView
                android:id="@+id/battery_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:paddingRight="5dp"
                android:text="Battery"
                android:textSize="@dimen/pipboy_text_size"
                android:singleLine="true"
                android:ellipsize="none"
                android:gravity="center_vertical|fill_horizontal"
                android:textColor="@color/piptext"/>

    </LinearLayout>
    <include layout="@layout/mid_top_gradient"/>
</LinearLayout>


